{{>layout/header}}  <!-- 현재 파일을 기준으로 다른 파일을 가져온다.-->


<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <h2 for="title">제목 :{{post.title}}</h2>
            </div>
            <div class="form-group">
                <h3 for="id">글 번호 : {{post.id}}</h3>        <lavel for="author">작성자 : {{post.author}}</lavel>

            </div>

            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control no-gray" rows="10" readonly>{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>
{{>layout/footer}}